            <rowConstraints>
            <RowConstraints maxHeight="275.0" minHeight="10.0" prefHeight="118.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="422.0" minHeight="10.0" prefHeight="422.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" percentHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <HBox fx:id="pane_board" alignment="CENTER" BorderPane.alignment="CENTER" GridPane.columnSpan="2" GridPane.rowIndex="1" />
                <Label fx:id="lb_turn" text="turn" />
                <Label id="lb_message" fx:id="lb_message" text="message" GridPane.rowIndex="2" />
            </children>
        </GridPane>
    </center>
</BorderPane>
