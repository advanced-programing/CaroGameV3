    <stylesheets>
        <URL value="@netsence.css" />
    </stylesheets>
    <center>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10" percentWidth="50" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10" prefWidth="100" />
